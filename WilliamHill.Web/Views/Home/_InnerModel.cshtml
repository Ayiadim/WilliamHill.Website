
<div data-bind="with: InnerModel">
    <table class="nested">
        <thead>
            <tr>
                <th>#</th>
                <th>Horse Name</th>
                <th>Odds</th>
                <th>Total Bets Placed</th>
                <th>Total Payout</th>
            </tr>
        </thead>

        <tbody data-bind="foreach: Horses">
            <tr>
                <td data-bind="text: ID"></td>
                <td data-bind="text: Name"></td>
                <td data-bind="text: Odds"></td>
                <td data-bind="text: TotalBets"></td>
                <td data-bind="text: Payout"></td>
            </tr>
        </tbody>
    </table>
</div>